@using Microsoft.AspNetCore.Identity
@using VendingManager.Models

@model IEnumerable<VendingManager.Models.AppUser>
@inject UserManager<AppUser> UserManager

@{
    ViewData["Title"] = "Zarządzanie Użytkownikami";
}

<div class="row">
    <div class="col-md-10 mx-auto">

        <div class="text-center mb-4">
            <h1 class="display-4">@ViewData["Title"]</h1>
            <p class="lead text-muted">Zarządzaj kontami użytkowników i ich uprawnieniami.</p>
        </div>

        <div class="card shadow-sm">
            <div class="card-header">
                <h4 class="mb-0">Lista Zarejestrowanych Użytkowników</h4>
            </div>

            <ul class="list-group list-group-flush">

                <li class="list-group-item d-none d-md-flex">
                    <div class="fw-bold col-4">Użytkownik (Email)</div>
                    <div class="fw-bold col-4">Przypisane Role</div>
                    <div class="fw-bold col-4 text-end">Akcje</div>
                </li>

                @foreach (var user in Model)
                {
                    <li class="list-group-item d-flex flex-wrap justify-content-between align-items-center">

                        <div class="col-12 col-md-4 mb-2 mb-md-0">
                            <strong>@user.UserName</strong>
                         
                            @if (user.EmailConfirmed)
                            {
                                <span class="badge bg-success">Potwierdzony</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Niepotwierdzony</span>
                            }
                        </div>

                        <div class="col-12 col-md-4 mb-2 mb-md-0">
                            @{
                                var roles = await UserManager.GetRolesAsync(user);
                            }
                            @if (roles.Any())
                            {
                                @foreach (var role in roles)
                                {
                                    <span class="badge bg-secondary me-1">@role</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted fst-italic">Brak ról</span>
                            }
                        </div>

                            <div class="col-12 col-md-4 text-md-end">
                                <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info">Szczegóły</a>
                                <a asp-action="ManageRoles" asp-route-id="@user.Id" class="btn btn-sm btn-outline-warning">Zarządzaj Rolami</a>
                                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger">Usuń</a>
                            </div>
                    </li>
                }
            </ul>

            <div class="card-footer">
                <small class="text-muted">Użytkowników można dodawać przez publiczną stronę "Register".</small>
            </div>
        </div>
    </div>
</div>