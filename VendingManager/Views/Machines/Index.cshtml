@model IEnumerable<VendingManager.Models.Machine>

@{
    ViewData["Title"] = "Zarządzanie Maszynami";
}

<div class="row">
    <div class="col-md-10 mx-auto">

        <div class="text-center mb-4">
            <h1 class="display-4">@ViewData["Title"]</h1>
            <p>
                <a asp-action="Create" class="btn btn-primary">Dodaj nową maszynę</a>
            </p>
        </div>

        <div class="card shadow-sm">
            <div class="card-header">
                <h4 class="mb-0">Lista Maszyn</h4>
            </div>

            <ul class="list-group list-group-flush">

                <li class="list-group-item d-none d-md-flex">
                    <div class="fw-bold col-1">ID</div>
                    <div class="fw-bold col-4">Nazwa i Lokalizacja</div>
                    <div class="fw-bold col-3 text-center">Status</div> <div class="fw-bold col-4 text-end">Akcje</div>
                </li>

                @foreach (var machine in Model)
                {
                    <li class="list-group-item d-flex flex-wrap justify-content-between align-items-center">

                        <div class="col-12 col-md-1 mb-2 mb-md-0">
                            <strong class="text-muted">#@machine.Id</strong>
                        </div>

                        <div class="col-12 col-md-4 mb-2 mb-md-0">
                            <strong>@machine.Name</strong>
                            <div><small class="text-muted fst-italic">@machine.Location</small></div>
                        </div>

                        <div class="col-12 col-md-3 mb-2 mb-md-0 text-md-center">
                            @if (machine.Status == "Online")
                            {
                                <span class="badge bg-success">Online</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Offline</span>
                            }
                            <div><small class="text-muted">Ost. kontakt: @machine.LastContact.ToString("yyyy-MM-dd HH:mm")</small></div>
                        </div>

                        <div class="col-12 col-md-4 text-md-end">
                            <a asp-action="Edit" asp-route-id="@machine.Id" class="btn btn-sm btn-outline-primary">Edytuj</a>
                            <a asp-action="Details" asp-route-id="@machine.Id" class="btn btn-sm btn-outline-info">Szczegóły</a>
                            <a asp-action="Delete" asp-route-id="@machine.Id" class="btn btn-sm btn-outline-danger">Usuń</a>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>