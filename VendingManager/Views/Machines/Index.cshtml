@using System.Linq
@using System.Globalization
@model IEnumerable<VendingManager.Models.Machine>

@{
    ViewData["Title"] = "Automaty";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-primary mb-0">Automaty</h1>
            <p class="text-muted small">Zarządzanie flotą maszyn vendingowych.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm rounded-pill px-4">
            <i class="bi bi-plus-lg me-2"></i>Dodaj Automat
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4 py-3">Nazwa / Lokalizacja</th>
                        <th class="py-3">Status</th>
                        <th class="py-3" style="width: 25%;">Zapełnienie</th>
                        <th class="py-3">Ostatni kontakt</th>
                        <th class="text-end pe-4 py-3">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var totalCapacity = item.Slots != null ? item.Slots.Sum(s => s.Capacity) : 0;
                        var currentStock = item.Slots != null ? item.Slots.Sum(s => s.Quantity) : 0;
                        var fillPercentage = totalCapacity > 0 ? (double)currentStock / totalCapacity * 100 : 0;

                        string barColor = "bg-success";
                        if (fillPercentage < 40) barColor = "bg-warning";
                        if (fillPercentage < 15) barColor = "bg-danger";

                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-dark">@item.Name</div>
                                <div class="small text-muted"><i class="bi bi-geo-alt me-1"></i>@item.Location</div>
                            </td>
                            <td>
                                @if (item.Status == "Online")
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">Online</span>
                                }
                                else if (item.Status == "Maintenance")
                                {
                                    <span class="badge bg-warning bg-opacity-10 text-warning px-3 py-2 rounded-pill">Serwis</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger px-3 py-2 rounded-pill">Offline</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <span class="me-2 small fw-bold text-muted" style="width: 35px;">@fillPercentage.ToString("0")%</span>
                                    <div class="progress flex-grow-1 shadow-none bg-light" style="height: 6px; border-radius: 10px;">
                                        <div class="progress-bar @barColor"
                                             role="progressbar"
                                             style="width: @fillPercentage.ToString("0", CultureInfo.InvariantCulture)%; border-radius: 10px;"
                                             aria-valuenow="@fillPercentage" aria-valuemin="0" aria-valuemax="100">
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-muted small">
                                <i class="bi bi-clock me-1"></i>@item.LastContact.ToString("yyyy-MM-dd HH:mm")
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary border-0" title="Edytuj">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info border-0" title="Szczegóły">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger border-0" title="Usuń">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>