@model IEnumerable<VendingManager.Models.Machine>

@{
    ViewData["Title"] = "Automaty";

    var totalMachines = Model.Count();
    var onlineMachines = Model.Count(m => m.Status == "Online");
    var offlineMachines = Model.Count(m => m.Status != "Online");
}

<div class="container-fluid px-0">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-primary mb-0">Zarządzanie Automatami</h1>
            <p class="text-muted mb-0">Monitoruj i zarządzaj flotą urządzeń.</p>
        </div>
        <div class="mt-3 mt-md-0">
            <a asp-action="Create" class="btn btn-primary shadow-sm px-4 rounded-pill">
                <i class="bi bi-plus-lg"></i> Dodaj Automat
            </a>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-12 col-md-4">
            <div class="card h-100 border-0 shadow-sm bg-white">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                        <i class="bi bi-hdd-rack display-6 text-primary"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold small mb-1">Wszystkie Urządzenia</h6>
                        <h2 class="mb-0 fw-bold">@totalMachines</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-4">
            <div class="card h-100 border-0 shadow-sm bg-white">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                        <i class="bi bi-wifi display-6 text-success"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold small mb-1">Status Online</h6>
                        <h2 class="mb-0 fw-bold text-success">@onlineMachines</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-4">
            <div class="card h-100 border-0 shadow-sm bg-white">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle bg-danger bg-opacity-10 p-3 me-3">
                        <i class="bi bi-exclamation-octagon display-6 text-danger"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold small mb-1">Wymaga Uwagi</h6>
                        <h2 class="mb-0 fw-bold text-danger">@offlineMachines</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
            <h5 class="card-title fw-bold mb-0">Lista Urządzeń</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Nazwa / ID</th>
                            <th>Lokalizacja</th>
                            <th>Status</th>
                            <th class="d-none d-md-table-cell">Ostatni Kontakt</th>
                            <th class="text-end pe-4">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold text-dark">@item.Name</div>
                                    <small class="text-muted">ID: @item.Id</small>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-geo-alt text-secondary me-2"></i>
                                        <span class="text-truncate" style="max-width: 250px;">@item.Location</span>
                                    </div>
                                </td>
                                <td>
                                    @if (item.Status == "Online")
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">
                                            <i class="bi bi-check-circle-fill me-1"></i> Online
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger px-3 py-2 rounded-pill">
                                            <i class="bi bi-x-circle-fill me-1"></i> @item.Status
                                        </span>
                                    }
                                </td>
                                <td class="d-none d-md-table-cell text-muted small">
                                    @if (item.LastContact != DateTime.MinValue)
                                    {
                                        <i class="bi bi-clock me-1"></i> @item.LastContact.ToString("yyyy-MM-dd HH:mm")
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light text-primary" title="Szczegóły">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light text-dark" title="Edytuj">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-light text-danger" title="Usuń">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>