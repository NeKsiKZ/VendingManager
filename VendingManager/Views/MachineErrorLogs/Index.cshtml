@model IEnumerable<VendingManager.Models.MachineErrorLog>

@{
    ViewData["Title"] = "Dziennik Błędów";
    var errorCount = Model.Count();
}

<div class="container-fluid px-0">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-danger mb-0">Centrum Awarii</h1>
            <p class="text-muted mb-0">Logi błędów zgłoszonych przez urządzenia.</p>
        </div>
        <div class="mt-3 mt-md-0">
            <div class="card border-0 shadow-sm bg-danger text-white px-4 py-2">
                <div class="d-flex align-items-center">
                    <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
                    <div>
                        <div class="small text-uppercase opacity-75 fw-bold">Zgłoszenia</div>
                        <div class="fw-bold fs-5">@errorCount</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm border-start border-danger border-4">
        <div class="card-header bg-white border-0 py-3">
            <h5 class="card-title fw-bold mb-0 text-danger">Lista Zgłoszeń</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Automat</th>
                            <th>Kod</th>
                            <th>Komunikat</th>
                            <th>Czas</th>
                            <th class="text-end pe-4">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@item.Machine.Name</td>
                                <td><span class="badge bg-danger">@item.ErrorCode</span></td>
                                <td class="text-muted text-truncate" style="max-width: 200px;">@item.Message</td>
                                <td class="small text-secondary">@item.Timestamp.ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="text-end pe-4">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light text-danger"><i class="bi bi-search"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>