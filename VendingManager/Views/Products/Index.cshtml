@model IEnumerable<VendingManager.Models.Product>
@using System.Globalization @{
    ViewData["Title"] = "Katalog Produktów";
}

<div class="row">
    <div class="col-md-10 mx-auto">

        <div class="text-center mb-4">
            <h1 class="display-4">@ViewData["Title"]</h1>
            <p>
                <a asp-action="Create" class="btn btn-primary">Dodaj nowy produkt</a>
            </p>
        </div>

        <div class="card shadow-sm">
            <div class="card-header">
                <h4 class="mb-0">Lista Produktów</h4>
            </div>

            <ul class="list-group list-group-flush">

                <li class="list-group-item d-none d-md-flex">
                    <div class="fw-bold col-1">Zdjęcie</div>
                    <div class="fw-bold col-5">Nazwa Produktu</div>
                    <div class="fw-bold col-2">Cena</div>
                    <div class="fw-bold col-4 text-end">Akcje</div>
                </li>

                @foreach (var item in Model)
                {
                    <li class="list-group-item d-flex flex-wrap justify-content-between align-items-center">

                        <div class="col-12 col-md-1 mb-2 mb-md-0">
                            @if (item.ImageUrl != null)
                            {
                                <img src="@item.ImageUrl" alt="@item.Name" style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;" />
                            }
                            else
                            {
                                <div style="width: 50px; height: 50px; background-color: #eee; border-radius: 5px; display: flex; align-items: center; justify-content: center;">
                                    <span class="text-muted" style="font-size: 0.8em;">Brak</span>
                                </div>
                            }
                        </div>

                        <div class="col-12 col-md-5 mb-2 mb-md-0">
                            <strong>@item.Name</strong>
                            <div class="text-muted text-truncate"><small>@item.Description</small></div>
                        </div>

                        <div class="col-12 col-md-2 mb-2 mb-md-0">
                            <strong>@item.Price.ToString("C", new CultureInfo("pl-PL"))</strong>
                        </div>

                        <div class="col-12 col-md-4 text-md-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edytuj</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Szczegóły</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Usuń</a>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>