@model IEnumerable<VendingManager.Models.Product>
@using System.Globalization

@{
    ViewData["Title"] = "Katalog Produktów";
    var totalProducts = Model.Count();
    var avgPrice = Model.Any() ? Model.Average(p => p.Price) : 0;
}

<div class="container-fluid px-0">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-primary mb-0">Asortyment</h1>
            <p class="text-muted mb-0">Zarządzaj produktami dostępnymi w automatach.</p>
        </div>
        <div class="mt-3 mt-md-0">
            <a asp-action="Create" class="btn btn-primary shadow-sm px-4 rounded-pill">
                <i class="bi bi-plus-lg"></i> Dodaj Produkt
            </a>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-12 col-md-6">
            <div class="card h-100 border-0 shadow-sm bg-white">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle bg-info bg-opacity-10 p-3 me-3">
                        <i class="bi bi-box-seam display-6 text-info"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold small mb-1">Liczba Produktów</h6>
                        <h2 class="mb-0 fw-bold">@totalProducts</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="card h-100 border-0 shadow-sm bg-white">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                        <i class="bi bi-tag display-6 text-success"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold small mb-1">Średnia Cena</h6>
                        <h2 class="mb-0 fw-bold text-success">@avgPrice.ToString("C", new CultureInfo("pl-PL"))</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0 py-3">
            <h5 class="card-title fw-bold mb-0">Lista Produktów</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Zdjęcie</th>
                            <th>Nazwa</th>
                            <th>Opis</th>
                            <th>Cena</th>
                            <th class="text-end pe-4">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" class="rounded shadow-sm" style="width: 40px; height: 40px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="rounded bg-light d-flex align-items-center justify-content-center text-muted" style="width: 40px; height: 40px;">
                                            <i class="bi bi-image"></i>
                                        </div>
                                    }
                                </td>
                                <td class="fw-bold text-dark">@item.Name</td>
                                <td class="text-muted small text-truncate" style="max-width: 200px;">@item.Description</td>
                                <td class="fw-bold text-primary">@item.Price.ToString("C", new CultureInfo("pl-PL"))</td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light text-dark"><i class="bi bi-pencil"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light text-info"><i class="bi bi-eye"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-light text-danger"><i class="bi bi-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>