@model IEnumerable<VendingManager.Models.Transaction>
@using System.Globalization

@{
    ViewData["Title"] = "Historia Transakcji";
    var transactionsCount = Model.Count();
    var totalSales = Model.Sum(t => t.SalePrice);
}

<div class="container-fluid px-0">
    <div class="mb-4">
        <h1 class="display-6 fw-bold text-primary mb-0">Rejestr Sprzedaży</h1>
        <p class="text-muted mb-0">Pełna historia zakupów w systemie.</p>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-12 col-md-6">
            <div class="card h-100 border-0 shadow-sm bg-white">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                        <i class="bi bi-receipt display-6 text-primary"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold small mb-1">Liczba Transakcji</h6>
                        <h2 class="mb-0 fw-bold">@transactionsCount</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="card h-100 border-0 shadow-sm bg-white">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                        <i class="bi bi-currency-dollar display-6 text-success"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold small mb-1">Łączna Wartość</h6>
                        <h2 class="mb-0 fw-bold text-success">@totalSales.ToString("C", new CultureInfo("pl-PL"))</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0 py-3">
            <h5 class="card-title fw-bold mb-0">Lista Transakcji</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Produkt</th>
                            <th>Automat</th>
                            <th>Data</th>
                            <th>Kwota</th>
                            <th class="text-end pe-4">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@item.Product.Name</td>
                                <td><span class="badge bg-light text-dark border">@item.Machine.Name</span></td>
                                <td class="text-muted small">@item.TransactionDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="fw-bold text-success">@item.SalePrice.ToString("C", new CultureInfo("pl-PL"))</td>
                                <td class="text-end pe-4">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light text-secondary"><i class="bi bi-info-circle"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>