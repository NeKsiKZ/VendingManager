@model IEnumerable<VendingManager.Models.Transaction>
@using System.Globalization

@{
    ViewData["Title"] = "Transakcje";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-primary mb-0">Historia Transakcji</h1>
            <p class="text-muted small">Pełny rejestr sprzedaży w systemie.</p>
        </div>
        <div class="text-end">
            <span class="badge bg-light text-dark border px-3 py-2">
                Strona @ViewBag.CurrentPage z @ViewBag.TotalPages
            </span>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-3 overflow-hidden mb-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4 py-3">Data Transakcji</th>
                        <th class="py-3">Automat</th>
                        <th class="py-3">Produkt</th>
                        <th class="text-end pe-4 py-3">Kwota</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 text-muted small">
                                <i class="bi bi-calendar3 me-2"></i>@item.TransactionDate.ToString("yyyy-MM-dd HH:mm")
                            </td>
                            <td>
                                @if (item.Machine != null)
                                {
                                    <a asp-controller="Machines" asp-action="Details" asp-route-id="@item.MachineId" class="text-decoration-none fw-bold text-dark">
                                        @item.Machine.Name
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Automat usunięty</span>
                                }
                            </td>
                            <td>
                                @if (item.Product != null)
                                {
                                    <span class="badge bg-secondary bg-opacity-10 text-dark border fw-normal">
                                        @item.Product.Name
                                    </span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td class="text-end pe-4 fw-bold text-success">
                                +@item.SalePrice.ToString("C", new CultureInfo("pl-PL"))
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (ViewBag.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item @(ViewBag.HasPrevious ? "" : "disabled")">
                    <a class="page-link shadow-none border-0 text-dark" asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage - 1)">
                        <i class="bi bi-chevron-left me-1"></i> Poprzednia
                    </a>
                </li>

                @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link shadow-none border-0 rounded-circle mx-1 @(i == ViewBag.CurrentPage ? "bg-primary text-white" : "text-dark")"
                           asp-action="Index" asp-route-pageNumber="@i">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(ViewBag.HasNext ? "" : "disabled")">
                    <a class="page-link shadow-none border-0 text-dark" asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage + 1)">
                        Następna <i class="bi bi-chevron-right ms-1"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>